{% extends 'base.html.twig' %}

{% block body %}

<nav class="breadcrumbnav" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path ('iut_test_technique') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="#">L'IUT</a></li>
        <li class="breadcrumb-item active" aria-current="page">Organigramme</li>
    </ol>
</nav>

<div class="container-fluid">
    <div class="row col-12 orgatitle">
        <h1>Organigramme</h1>
    </div>

    <section class="row col-12 organigramme">

        {% for key in direction %}
                <ul class="list-group list-group-horizontal direction">
                    <li class="list-group-item"> <strong> {{ key.poste }} </strong> {{ key.nom }}</li>
                </ul>
        {% endfor %}


        <div class="administration col-5 card">
            <h3>Services Administratifs, techniques et de la vie étudiante</h3>
            <hr>

            <h4 style="border-left: solid 10px #6c416c;border-right: solid 10px #6c416c;">Pôle Administration</h4>
        {% for key in admin %}
                <ul class="list-group list-group-horizontal card-body">
                    <li class="list-group-item"><strong> {{ key.poste }} </strong> <br> {{ key.nom }}</li>
                </ul>
        {% endfor %}

            <h4 style="border-left: solid 10px #6c416c;border-right: solid 10px #6c416c;">Pôle Vie Etudiante</h4>
            {% for key in vieetudiante %}
