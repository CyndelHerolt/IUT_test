{% extends 'base.html.twig' %}

{% block body %}
    <nav style="--bs-breadcrumb-divider: '>'; margin: 10px 2vw; font-size: .8vw" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#" style="color: black; text-decoration: none">Accueil</a></li>
            <li class="breadcrumb-item"><a href="#" style="color: black; text-decoration: none">L'IUT</a></li>
            <li class="breadcrumb-item active" aria-current="page" style="color: #6c416c">Départements</li>
        </ol>
    </nav>

    <div class="container">
        <section class="row col-12" style="margin: 75px auto;">
            <h1 style="color: #6c416c">Départements</h1>
            <h4>L’IUT de Troyes compte aujourd’hui 6 départements et 1 service de formation continue et alternance.</h4>
        </section>
    </div>

    <div class="container">
        <section>

            {% for key in depts %}
                <article class="row col-12" style="margin: 75px auto;box-shadow: rgba(0, 0, 0, 0.05) 0px 6px 24px 0px, rgba(0, 0, 0, 0.08) 0px 0px 0px 1px; padding: 20px; border-radius: 20px; height: fit-content;backdrop-filter: blur(5px)">
                    <div class="col-9" style="display: flex; align-items: center;">
                        <img src="{{ key.logo }}" alt="Oups" style="width: 9vw; border-right: solid 1px; padding-right: 10px">
                        <div style="display: flex; flex-direction: column; margin-left: 20px">
                            <h5>{{ key.nom }} | {{ key.sigle }}</h5>
                            <p>{{ key.presentation }}</p>
                        </div>
                    </div>
                    <div class="col-3" style="display: flex; flex-direction: column; border-left: solid 1px; padding-left: 20px;">
                        <p>Responsable : <strong>{{ key.responsable }}</strong></p>
                        <p>{{ key.mail_responsable }}</p>
                        <p>{{ key.tel_responsable }}</p>
                    </div>
                </article>


            {% endfor %}
        </section>
    </div>

{% endblock %}