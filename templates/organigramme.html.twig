                    <li class="list-group-item"><strong> {{ key.poste }} </strong> <br> {{ key.nom }}</li>
                </ul>
            {% endfor %}

            <h4 style="border-left: solid 10px #6c416c;border-right: solid 10px #6c416c;">Pôle Patrimoine et Logistique</h4>
