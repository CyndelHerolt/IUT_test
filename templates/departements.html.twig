{% extends 'base.html.twig' %}

{% block body %}
    <nav style="--bs-breadcrumb-divider: '>'; margin: 10px 2vw; font-size: .8vw" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#" style="color: black; text-decoration: none">Accueil</a></li>
            <li class="breadcrumb-item"><a href="#" style="color: black; text-decoration: none">L'IUT</a></li>
            <li class="breadcrumb-item active" aria-current="page" style="color: #6c416c">Départements</li>
        </ol>
    </nav>

    <div class="container">
        <section class="row col-12" style="margin: 75px auto;">
            <h1 style="color: #6c416c">Départements</h1>
            <h4>L’IUT de Troyes compte aujourd’hui 6 départements et 1 service de formation continue et alternance.</h4>
        </section>
    </div>

        <section class="container col-12" style="display: flex; flex-direction: row; justify-content: space-around; flex-wrap: wrap;">
            {% for key in depts %}
                <div class="card col-3" style=" box-shadow: rgba(0, 0, 0, 0.05) 0px 6px 24px 0px, rgba(0, 0, 0, 0.08) 0px 0px 0px 1px; width: 22vw; margin-bottom: 50px">
                    <img src="{{ key.logo }}" alt="Oups" style="width: 50%; margin: 0 auto; border-bottom: solid {{ key.couleur }}">
                    <div class="card-body">
                        <h5 class="card-text">{{ key.nom }} | <strong style="color: {{ key.couleur }}">{{ key.sigle }}</strong></h5>
                        <p class="card-text">{{ key.presentation }}</p>
                        <button type="button" class="btn btn-warning">Découvrir</button>
                        <hr>
                        <div class="card-text" style="font-size: .8vw">
                            <p>Responsable : <strong>{{ key.responsable }}</strong></p>
                            <p>{{ key.mail_responsable }}</p>
                            <p>{{ key.tel_responsable }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </section>

{% endblock %}